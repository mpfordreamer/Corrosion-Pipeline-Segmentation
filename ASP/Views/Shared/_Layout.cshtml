<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UjiCoba.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

    <!-- Main Content -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 px-5"> <!-- Added px-5 for padding -->
            <a class="navbar-brand text-primary" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.8rem;"><b>Pipeline Segmentation</b></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-end"> <!-- Added justify-content-end to align items to the right -->
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.5rem; margin-right: 1.5rem;">Home</a> <!-- Increased font size and added margin -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About" style="font-size: 1.5rem; margin-right: 1.5rem;">User  Guide</a> <!-- Increased font size and added margin -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ListImage" style="font-size: 1.5rem; margin-right: 2rem;">List Image</a> <!-- Increased font size -->
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0" style="margin: 20px 0;"> <!-- Changed to container-fluid -->
        @RenderBody() 
    </div>

    <footer class="border-top footer text-muted" style="margin-top: 40px;">
        <div class="container">
            &copy; 2024 - Made by De Mahesta<br> Undiksha x PT. Dago Engineering
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function w3_open() {
            document.getElementById("mySidebar").style.display = "block"; // Show the sidebar
            document.getElementById("myOverlay").style.display = "block"; // Show the overlay
        }

        function w3_close() {
            document.getElementById("mySidebar").style.display = "none"; // Hide the sidebar
            document.getElementById("myOverlay").style.display = "none"; // Hide the overlay
        }
            document.getElementById('performanceSelect').addEventListener('change', function() {
        var selectedValue = this.value;
        console.log("Selected Performance Option: " + selectedValue);
        // You can add your logic here to handle the performance selection
    });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>