<!-- Views/Home/About.cshtml -->
@{
    ViewData["Title"] = "About";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/about.css" /> <!-- Ensure this path is correct -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="margin-top: 10px; margin-bottom: 30px;">
    <h2 class="text-center text-primary my-5">About</h2>

    <div class="container">
        <div class="step-text-box">
            <p class="step-number">01</p>
            <h3 class="heading-tertiary">Image Upload</h3>
            <p>
                Users can upload images in various formats (jpg, jpeg, png) for segmentation. 
                Alternatively, users can take a picture directly using their device's camera 
                for immediate processing. This feature supports seamless integration with 
                different devices for a flexible and user-friendly experience.
            </p>
        </div>
        <div class="step-img-box">
            <img src="@Url.Content("~/images/Upload1.jpg")" alt="Image Upload Example" class="step-img" />
        </div>

        <div class="step-img-box">
            <img src="@Url.Content("~/images/Upload2.jpg")" alt="Model Prediction Example" class="step-img" />
        </div>
        <div class="step-text-box">
            <p class="step-number">02</p>
            <h3 class="heading-tertiary">Model Prediction</h3>
            <p>
                The application uses deep learning models to predict segmentation masks for the uploaded images.
            </p>
        </div>

        <div class="step-text-box">
            <p class="step-number">03</p>
            <h3 class="heading-tertiary">Overlay Visualization</h3>
            <p>
                Users can visualize the original images, predicted masks, and overlays for better understanding.
            </p>
        </div>
        <div class="step-img-box">
            <img src="@Url.Content("~/images/Upload3.png")" alt="Visualization Example" class="step-img" />
        </div>
    </div>
</body>
</html>